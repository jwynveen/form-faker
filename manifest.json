{
  "manifest_version": 2,

  "name": "Form Faker",
  "description": "Fill in common form fields with data from the Faker library",
  "version": "0.3",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["node_modules/faker/build/build/faker.min.js"]
    }
  ],
  "browser_action": {
    "default_title": "Fake form data"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
