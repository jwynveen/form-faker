{
  "manifest_version": 2,

  "name": "Form Faker",
  "description": "Fill in common form fields with data from the Faker library",
  "version": "0.2",

  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["faker.min.js"]
    }
  ],
  "browser_action": {
    "default_title": "Fake form data"
  }
}